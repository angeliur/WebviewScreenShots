<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.webviewscreenshots.MainActivity">

    <WebView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_screenshots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/webview_screenshots"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_webviewuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/webview_use"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_localwebview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/webview_local"
            android:padding="8dp"/>
    </LinearLayout>


</LinearLayout>
